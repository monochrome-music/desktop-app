{
  "identifier": "mobile-capability",
  "windows": ["main"],
  "platforms": ["iOS", "android"],
  "permissions": [
    "core:default",
    "core:event:default",
    "open-external",
    "source-url",
    "media-toolkit:default",
    "google-auth:default",
    "media-session:default",
    "android-download",
    "fs:allow-exists",
    "fs:allow-write-file",
    {
      "identifier": "fs:scope",
      "allow": [
        "$DOCUMENT",
        "$DOCUMENT/**"
      ]
    }
  ],
  "remote": {
    "urls": ["https://*"]
  }
}
